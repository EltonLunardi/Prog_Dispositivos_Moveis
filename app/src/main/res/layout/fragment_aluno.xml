<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aluno">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_photo"/>

        <TextView
            android:id="@+id/nome_aluno"
            android:text="User_name "
            android:gravity="center"
            android:layout_toRightOf="@id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/sobrenome_aluno"
            android:text=" sobrenome_name"
            android:layout_alignBaseline="@id/nome_aluno"
            android:layout_toRightOf="@id/nome_aluno"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/subject_aluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nome_aluno"
            android:layout_marginHorizontal="20dp"
            android:layout_toRightOf="@id/imageView2"
            android:text="Graduação em 'subject'" />

        
        <TextView
            android:id="@+id/Matricula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_below="@id/imageView2"
            android:text="Matrícula:" />


    </RelativeLayout>
</FrameLayout>